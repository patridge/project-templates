<Addin id          = "iOSStarterTemplate"
       namespace   = "PatridgeDev"
       name        = "Custom iOS Project"
       author      = "Adam Patridge"
       copyright   = "MIT"
       url         = "http://www.patridgedev.com/"
       description = "Just a custom starter project for Xamarin.iOS."
       category    = "Mobile Development"
       version     = "0.1.0">

  <Runtime>
    <Import file="CustomXamariniOSProject.xpt.xml"/>
    <Import file="LICENSE" />
    <Import file="README.md" />
    <Import file="Files/code/AppDelegate.cs" />
    <Import file="Files/code/BaseViewController.cs" />
    <Import file="Files/code/FirstProjectViewController.cs" />
    <Import file="Files/config/Contents.json" />
    <Import file="Files/config/Entitlements.plist" />
    <Import file="Files/config/Info.plist" />
    <Import file="Files/images/Default-568h@2x.png" />
    <Import file="Files/images/Splash.png" />
    <Import file="Files/ui/LaunchScreen.xib" />
  </Runtime>

  <Extension path="/MonoDevelop/Ide/ProjectTemplates">
    <ProjectTemplate id="iOSStarterTemplate"
                     file="CustomXamariniOSProject.xpt.xml" />
  </Extension>

